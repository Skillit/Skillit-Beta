<!DOCTYPE html>

<html>
<head>
<%= stylesheet_link_tag "home" %>
</head>
<body>


    <%= render "layouts/navbar" %>

    <div class="container">

		<div class="content">
            <center><h2>Sorry our Search is only limited to this page for now! Please search again to find Projects.</h2></center>
            
            <center><h2>PROJECTS</h2></center>
			<% @project.each do |p| %>
            <div class="row">
                <div class="col-md-7">
                    <a href="#">
                        <br>
                        <img class="img-responsive" src="http://placehold.it/700x300" alt="">
                    </a>
                </div>
                <div class="col-md-5">
                    <h3><%= link_to p.name, project_path(p) %></h3>
                    <p><%= p.description %></p>
                    
                </div>
            </div>
            <!-- /.row -->
            <hr>
            <% end %>

            <center><h2>USERS</h2></center>
            <% @user.each do |p| %>
            <div class="row">
                <div class="col-md-7">
                    
                    <h3><%= p.avatar.url(:medium) %>
                        <%= link_to p.first_name, user_path(p) %>
                        <%= link_to p.last_name, user_path(p) %></h3>
                    <p><%= p.about %></p>
                    
                </div>
            </div>
            <!-- /.row -->
            <hr>
            <% end %>



		</div>
	</div>
</body>
<footer>

    <%= render "layouts/footer" %>

 </footer>
</html>